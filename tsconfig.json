        "module": "commonjs",
        "rootDir": "./src",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "bun-types"
        ]
    }
}